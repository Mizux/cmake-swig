<?xml version="1.0" encoding="UTF-8"?>
<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
<modelVersion>4.0.0</modelVersion>

<groupId>@CMAKE_SWIG_JAVA@</groupId>
<artifactId>cmakeswig-java</artifactId>
<version>@PROJECT_VERSION@</version>
<packaging>jar</packaging>

<name>${project.groupId}:${project.artifactId}</name>
<description>A Modern CMake Swig C++/Java project.</description>
<url>https://github.com/mizux/cmake-swig</url>

<licenses>
	<license>
		<name>The Apache License, Version 2.0</name>
		<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
	</license>
</licenses>

<developers>
	<developer>
		<name>Mizux Seiha</name>
		<email>mizux.dev@gmail.com</email>
		<organization>Mizux</organization>
		<organizationUrl>http://www.mizux.org</organizationUrl>
	</developer>
</developers>

<scm>
	<connection>scm:git:git://github.com/mizux/cmake-swig.git</connection>
	<developerConnection>scm:git:ssh://github.com:mizux/cmake-swig.git</developerConnection>
	<url>http://github.com/mizux/cmake-swig/tree/master</url>
	<tag>HEAD</tag>
</scm>

<issueManagement>
	<system>GitHub Issues</system>
	<url>http://github.com/mizux/cmake-swig/issues</url>
</issueManagement>

<properties>
	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	<maven.compiler.source>1.8</maven.compiler.source>
	<maven.compiler.target>1.8</maven.compiler.target>
</properties>

<dependencies>
	<dependency>
		<groupId>@CMAKE_SWIG_JAVA@</groupId>
		<artifactId>cmakeswig-linux-x64</artifactId>
		<version>@PROJECT_VERSION@</version>
		<type>jar</type>
		<scope>runtime</scope>
	</dependency>
	<dependency>
		<groupId>@CMAKE_SWIG_JAVA@</groupId>
		<artifactId>cmakeswig-osx-x64</artifactId>
		<version>@PROJECT_VERSION@</version>
		<type>jar</type>
		<scope>runtime</scope>
	</dependency>
	<dependency>
		<groupId>@CMAKE_SWIG_JAVA@</groupId>
		<artifactId>cmakeswig-win-x64</artifactId>
		<version>@PROJECT_VERSION@</version>
		<type>jar</type>
		<scope>runtime</scope>
	</dependency>
	<dependency>
		<groupId>net.java.dev.jna</groupId>
		<artifactId>jna-platform</artifactId>
		<version>5.5.0</version>
	</dependency>
</dependencies>

<build>
	<plugins>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-source-plugin</artifactId>
			<version>3.2.0</version>
			<executions>
				<execution>
					<id>attach-sources</id>
					<goals>
						<goal>jar-no-fork</goal>
					</goals>
				</execution>
			</executions>
		</plugin>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-javadoc-plugin</artifactId>
			<version>3.2.0</version>
			<executions>
				<execution>
					<id>attach-javadocs</id>
					<goals>
						<goal>jar</goal>
					</goals>
				</execution>
			</executions>
		</plugin>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-gpg-plugin</artifactId>
			<version>1.5</version>
			<executions>
				<execution>
					<id>sign-artifacts</id>
					<phase>verify</phase>
					<goals>
						<goal>sign</goal>
					</goals>
				</execution>
			</executions>
		</plugin>
	</plugins>
</build>
</project>
